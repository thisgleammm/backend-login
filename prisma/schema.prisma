generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  nim      String @unique
  email    String @unique
  password String
}

model ParkingArea {
  id              Int    @id @default(autoincrement())
  name            String
  location        String
  type            String
  capacity        Int
  available       Int
  price           String
  latitude        Float
  longitude       Float
  operatingHours  String
}
